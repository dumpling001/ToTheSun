<div class="col-md-12">
  <div class="article">
    <%= link_to("New article", new_article_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>标题</td>
        <td>内容</td>
        <td>作者</td>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "article_item", :collection => @articles, :as => :article %>
    </tbody>
  </table>
</div>

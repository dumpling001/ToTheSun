<%= form_for @article do |f| %>
<% if @article.errors.any? %>
<ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>
标题
<%= f.text_field :title %>
<br>
叙述
<br>
<%= f.text_area :content %>
<br>

<%= f.submit "Submit", :disable_with => '正在努力提交正，请等待' %>
<% end %>

<!-- border line -->

<%= form_for @article do |f| %>

<div class="form-article">
    <div class="form-article string optional">
        <%= f.label "title", :class => "string optional control-label" %>
        <%= f.text_field :title, :class => "string optional form-control" %>
    </div>

    <div class="form-article string optional">
        <%= f.label "content", :class => "string optional control-label" %>
        <%= f.text_area :content, :class => "string optional form-control" %>
    </div>

</div>
<%= f.submit "Submit", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>

<div class="col-md-12">

  <h2 class="text-center"> 我加入的讨论版 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> 标题 </th>
        <th> 文章内容 </th>
        <th> 评论数量 </th>
        <th> 最后更新 </th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td> # </td>
          <td> <%= link_to(article.title, article_path(article)) %> </td>
          <td> <%= article.content %> </td>
          <td> <%= article.posts.count %> </td>
          <td> <%= article.updated_at %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
